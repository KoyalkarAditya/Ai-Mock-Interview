generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model MockInterview {
  id String  @id @default(cuid())
  jsonMockResp String 
  jobPosition String
  jobDesc String
  jobExperience String 
  createdBy String
  createdAt DateTime @default(now())
  answers UserAnswer[]
}

model UserAnswer {
  id String @id @default(cuid())
  question String
  correctAnswer String
  userAnswer String
  interviewId String
  rating Int
  userEmail String
  interview MockInterview @relation(fields: [interviewId],references: [id])
  createdAt DateTime @default(now())
}